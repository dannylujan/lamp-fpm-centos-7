[{{ domain }}]
listen = /var/run/php-fpm/{{ domain }}.sock
listen.allowed_clients = 127.0.0.1

listen.owner = {{ domain_user }} 
listen.group = apache
listen.mode = 0660
user = {{ domain_user }}
group = {{ domain_user }}

pm = dynamic
pm.max_children = {{ max_clients }}
pm.start_servers = 2
pm.min_spare_servers = 2
pm.max_spare_servers = 25

php_admin_value[error_log] = /var/log/php-fpm/php-fpm-pools/{{ domain }}/error.log
php_admin_flag[log_errors] = on
php_admin_value[session.save_path] = /tmp/
